<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('assets/background.jpg');">
	<div class="banner-content">
		<h1 class="text-center">Welcome to my bar</h1>
		<%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary center" %>
	</div>
</div>



<ul>
	<% @cocktails.each do |cocktail| %>
	<li><%= link_to cocktail.name, cocktail_path(cocktail) %> 
		<%= link_to cocktail_path(cocktail), method: :delete do %>
		<i class="fa fa-trash" aria-hidden="true"></i>
		<% end %></li>
		<% end %>
	</ul>


