<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('assets/background.jpg');">
	<div class="banner-content">
		<h1 class="text-center">Welcome to my bar</h1>
		<%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary center" %>
	</div>
</div>

<div class="container">
	<div class="row">
		<% @cocktails.each do |cocktail| %>
		<div class="col-xs-12 col-sm-6 col-md-4 padded">
			<div class="card">
				<%= cl_image_tag cocktail.photo.url(:bright_face) %>
				<div class="card-block">
					<h4 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %> </h4>
					<%= link_to cocktail_path(cocktail), method: :delete do %>
					<i class="fa fa-trash" aria-hidden="true"></i>
					<% end %>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>